{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "rules": {
    "indent": ["error", 2], 
    "quotes": ["error", "single"], 
    "max-len": [
      "error",
      {
        "code": 80, 
        "tabWidth": 2, 
        "ignoreUrls": true, 
        "ignoreStrings": true, 
        "ignoreTemplateLiterals": true, 
        "ignoreRegExpLiterals": true 
      }
    ]
  }
}